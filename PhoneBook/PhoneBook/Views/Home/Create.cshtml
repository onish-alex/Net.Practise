@{
    ViewData["Title"] = "Внести новый номер";
}
@using PhoneBook.ViewModels;
@model PhoneViewModel

<form class="container" asp-action="Create" asp-controller="Home">

    <div class="row text-center justify-content-center" asp-validation-summary="All"></div>

    <div class="row">
        <div class="col-3">

            <label asp-for="PhoneNumber">Номер:</label>
        </div>
            <input asp-for="PhoneNumber" type="tel" />
        </div>

    <div class="row">
        <div class="col-3">
            <label asp-for="Address">Адрес</label>
        </div>    
        <input asp-for="Address" />
    </div>

    <div class="row">
        <div class="col-3">
            <label asp-for="Status">Статус</label>
        </div>
        <select asp-for="Status">
            <option>Актуальный</option>
            <option>Нектуальный</option>
            <option>Требует уточнения</option>
        </select>
    </div>

    <div class="row">
        <input class="btn btn-primary" type="submit" value="Создать" />
    </div>
</form>
